{
  "services": [{
      "id": "uat4",
      "display_name": "UAT4 Azure NodeJS App",
      "source_repository": "-b master git@github.com:newrelic/demo-nodetron.git",
      "deploy_script_path": "deploy/linux/roles",
      "port": 5004,
      "destinations": ["host1"]
    },{
      "id": "uat5",
      "display_name": "UAT5 Azure NodeJS App",
      "source_repository": "-b master git@github.com:newrelic/demo-nodetron.git",
      "deploy_script_path": "deploy/linux/roles",
      "port": 5005,
      "destinations": ["host1"]
    }
  ],

  "global_tags": {
    "owning_team": "DEMO",
    "Environment": "development",
    "Department": "product",
    "Product": "V3",
    "DeployedBy": "UAT Azure"
  },

  "resources": [
    {
      "id": "host1",
      "provider": "azure",
      "type": "vm",
      "size": "Standard_B1s",
      "tags": {
        "OpsTeam": "OpsUat",
        "BillingCode": "2"
      }
    }
  ],

  "instrumentations": {
    "resources": [
      {
        "id": "nr_infra",
        "resource_ids": ["host1"],
        "provider": "newrelic",
        "source_repository": "-b master git@github.com:newrelic/demo-newrelic-instrumentation.git",
        "deploy_script_path": "deploy/linux/roles",
        "version": "1.12.2" 
      }
    ],
    "services": [
      {
        "id": "nr_node_agent",
        "service_ids": ["uat4", "uat5"],
        "provider": "newrelic",
        "source_repository": "-b master git@github.com:newrelic/demo-newrelic-instrumentation.git",
        "deploy_script_path": "deploy/node/linux/roles",
        "version": "6.11.0"
      }
    ]
  }
}
